---
interface Props {
	titulo?: string
	texto?: string
	href?: string
	class?: string
}
import GeogebraIcon from '@/components/GeogebraIcon.astro'
const { titulo, texto, href, class: className, ...rest } = Astro.props as Props
import { Icon } from 'astro-icon/components'
---

<div
	class={`mx-auto my-5 max-w-screen-md bg-orange-400 px-5 py-3 transition duration-300 ease-in-out hover:scale-105 md:rounded-xl ${className}`}
>
	<div class="flex flex-col items-center sm:flex-row">
		<div class="w-full px-1 sm:w-2/3">
			<h4 class="!md:text-4xl !text-3xl !font-bold !text-darkblue">
				{titulo}
			</h4>
			<a class="flex items-center !no-underline" href={href} target="_blank">
				<div class="group relative w-max text-slate-800">
					<span>{texto}</span>
					<span class="absolute -bottom-1 left-0 h-1 w-0 bg-blue transition-all group-hover:w-full"
					></span>
					<Icon class="inline size-7 text-slate-800" name="bi:box-arrow-in-right" />
				</div>
			</a>
		</div>
		<div class="flex w-full items-center justify-center text-center sm:w-1/3">
			<a href={href} target="_blank"><GeogebraIcon class="size-24 md:size-44" /> </a>
		</div>
	</div>
</div>
