---
const { nombre, rol, imagen } = Astro.props;
---
<div class="bg-gray-800 p-4 rounded-xl border-l-4 border-indigo-500 hover:border-indigo-300 hover:translate-x-1 transition-all duration-300 group">
  <div class="flex items-center justify-between">
    <article>
      <h3 class="text-white font-semibold">{nombre}</h3>
      <p class="text-gray-400">{rol}</p>
    </article>
    <article>
      <img src={imagen} alt={`Foto de ${nombre}`} class="rounded-full size-16 mx-auto mb-4 border-2 border-cyan-400 object-cover group-hover:-translate-x-3 transition-transform delay-300" />
    </article>
  </div>
</div>
