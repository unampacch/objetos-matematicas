---
import BentoItem from "@/components/BentoItem.astro";
import { asignaturas } from "@/pages/asignaturas/asignaturas.json";
const ASIGNATURA = "matematicas_1";
const asignatura = asignaturas[ASIGNATURA];
const { objetos_aprendizaje } = asignatura;
import Layout from "@/layouts/Layout.astro";
---

<Layout title={asignatura.titulo} description={asignatura.descripcion}>
  <div class="container mx-auto my-10">
    <h2
      class="mb-4 text-3xl font-extrabold dark:text-light md:text-5xl lg:text-6xl"
    >
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r to-light from-blue"
      >
        {asignatura.titulo}
      </span>
    </h2>
    <h3 class="ms-2 font-semibold text-gray-500 dark:text-gray-400">
      Los siguientes son los objetos de aprendizaje que tenemos disponbles para
      ti:
    </h3>
    <p class="my-6 max-w-3xl bg-light p-4 text-pretty text-dark mx-auto">
      {asignatura.descripcion}
    </p>
    <section
      class={`
      grid grid-cols-10 auto-rows-[30rem] gap-5
      mx-auto
    `}
    >
      {
        objetos_aprendizaje.map((objeto, index) => (
          <div
            class={`
              col-span-${index % 4 === 0 || index % 4 === 3 ? "4" : "6"}
              flex flex-col
              ${index % 2 === 0 ? "animate-fade-right" : "animate-fade-left"}
            `}
          >

            <BentoItem title={objeto.titulo} class="flex-1" slug={objeto.slug}>
              <img
                slot="image"
                class={`background transition-scale absolute bottom-0 left-0 top-0
              -z-10 h-full w-full
              bg-cover bg-center bg-no-repeat opacity-90 bg-blend-multiply duration-1000 ease-in-out group-hover:scale-110`}
                src={objeto.portada}
              />
              <p slot="content" class="max-w-xl text-base md:text-lg">
                {objeto.descripcion}
              </p>
            </BentoItem>
          </div>
        ))
      }
    </section>
  </div>
</Layout>
<style>
  .col-span-4 {
    grid-column: span 10 / span 10;
    @media screen and (min-width: 920px) {
      grid-column: span 4 / span 4;
    }
  }
  .col-span-6 {
    grid-column: span 10 / span 10;
    @media screen and (min-width: 920px) {
      grid-column: span 6 / span 6;
    }
  }
</style>
